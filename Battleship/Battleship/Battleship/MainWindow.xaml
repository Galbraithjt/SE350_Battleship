        <Label x:Name="Hit_Ratio_Enemy" Content="Hit: 0" HorizontalAlignment="Left" Height="37" Margin="1122,492,0,0" VerticalAlignment="Top" Width="83" Background="#FF62ACF5" Visibility="Hidden" FontWeight="Bold" FontSize="18"/>
